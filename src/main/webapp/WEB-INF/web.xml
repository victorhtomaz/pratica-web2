<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>PraticaWeb2</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.xhtml</welcome-file>
	</welcome-file-list>
	 <servlet>
	 	<servlet-name>InitParametersTestServlet</servlet-name>
	 	<servlet-class>br.pratica.servlets.parametrosEx.InitParametersTestServlet</servlet-class>
	 	<init-param>
	 		<param-name>dono</param-name>
	 		<param-value>Osvaldo</param-value>
	 	</init-param>
	 	<init-param>
	 		<param-name>animal</param-name>
	 		<param-value>Cachorro</param-value>
	 	</init-param>
	 </servlet>
	 <servlet>
	 	<servlet-name>PContextParametersTestServlet</servlet-name>
	 	<servlet-class>br.pratica.servlets.parametrosEx.PContextParametersTestServlet</servlet-class>
	 </servlet>
	 <servlet>
	 	<servlet-name>SContextParametersTestServlet</servlet-name>
	 	<servlet-class>br.pratica.servlets.parametrosEx.SContextParametersTestServlet</servlet-class>
	 </servlet>
	 <context-param>
	 	<param-name>marca</param-name>
	 	<param-value>fiat</param-value>
	 </context-param>
	 <context-param>
	 	<param-name>modelo</param-name>
	 	<param-value>uno</param-value>
	 </context-param>
	 <servlet-mapping>
        <servlet-name>InitParametersTestServlet</servlet-name>
        <url-pattern>/init-parameters-test</url-pattern>
    </servlet-mapping>
</web-app>
